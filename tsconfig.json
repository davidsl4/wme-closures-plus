{
  "compilerOptions": {
    "target": "es2023",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": "src",
    "outDir": "dist/",
    "jsx": "react-jsx"
  },
  "include": ["src", "rollup.config.ts"]
}
